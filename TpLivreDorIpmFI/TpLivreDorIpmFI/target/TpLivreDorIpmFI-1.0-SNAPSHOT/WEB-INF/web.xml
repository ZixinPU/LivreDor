<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CtrlCentral</servlet-name>
        <servlet-class>miage.ctrl.CtrlCentral</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Accueil</servlet-name>
        <jsp-file>/jsp/Accueil.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Saisir</servlet-name>
        <jsp-file>/jsp/Saisir.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CtrlSaisir</servlet-name>
        <servlet-class>miage.ctrl.CtrlSaisir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Lire</servlet-name>
        <jsp-file>/jsp/Lire.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Supprimer</servlet-name>
        <jsp-file>/jsp/Supprimer.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CtrlConfirmer</servlet-name>
        <servlet-class>miage.ctrl.CtrlConfirmer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Confirmer</servlet-name>
        <jsp-file>/jsp/Confirmer.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CtrlSupprimer</servlet-name>
        <servlet-class>miage.ctrl.CtrlSupprimer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CtrlCentral</servlet-name>
        <url-pattern>/ctrlCentral</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Saisir</servlet-name>
        <url-pattern>/saisir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlSaisir</servlet-name>
        <url-pattern>/ctrlSaisir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Lire</servlet-name>
        <url-pattern>/lire</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Supprimer</servlet-name>
        <url-pattern>/supprimer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlConfirmer</servlet-name>
        <url-pattern>/ctrlConfirmer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Confirmer</servlet-name>
        <url-pattern>/confirmer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlSupprimer</servlet-name>
        <url-pattern>/ctrlSupprimer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
